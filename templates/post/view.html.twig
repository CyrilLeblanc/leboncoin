{% extends 'base.html.twig' %}

{% block body %}
    <table>
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ post.price }}â‚¬</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ post.publicationDate|date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.detail }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td><a href="{{path('profile_user', { 'idUser': post.user.id })}}">{{ post.user.username|upper }}</a></td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ post.user.address.city }} ( {{post.user.address.postcode}} )</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>
                    {% for image in post.images %}
                        <img src="{{ asset('img/posts/'~image.filename) }}">
                    {% else %}
                        No images
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
    {% if isOwner %}
        <a href="{{ path('post_edit', {'idPost': post.id}) }}">Edit</a>
        <br>
    {% else %}
        <a href="{{path('chat_post', { 'idPost': post.id })}}">start a chat</a>
        <br>
    {% endif %}
    <a href="{{ path('favorite_toggle', {'idPost': post.id}) }}">
        {% if isFavorite %}
            Remove from favorites
        {% else %}
            Add to favorites
        {% endif %}
    </a>
{% endblock %}
