{% extends 'base.html.twig' %}

{% block body %}
    {% for message in chat.messages %}
        <p>
            <small>{{message.timestamp|date("Y/m/d H:i:s")}}</small>
            <b>{{message.sender.username}}: </b>
            {{message.content}}
        </p>
    {% endfor %}
    {{ form(form) }}
{% endblock %}
